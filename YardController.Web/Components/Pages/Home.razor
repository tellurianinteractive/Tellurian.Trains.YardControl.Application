@page "/"
@page "/{Station}"
@rendermode InteractiveServer
@using YardController.Web.Services
@using YardController.Web.Resources
@using Tellurian.Trains.YardController.Model
@using Tellurian.Trains.YardController.Model.Control
@using Tellurian.Trains.YardController.Model.Control.Extensions
@inject IYardDataService YardDataService
@inject IYardController YardController
@inject ISignalStateService SignalStateService
@inject TrainRouteLockings PointLockings
@inject KeyboardCaptureService KeyboardCapture
@inject NavigationManager Navigation
@implements IAsyncDisposable

<PageTitle>@(_labelTranslator.Translate(_topology.Name, System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName))</PageTitle>

<div class="yard-container">
    <div class="emergency-bar">
        <button class="emergency-button" @onclick="SetAllSignalsRedAsync" disabled="@_isBusy">@Messages.AllSignalsStop</button>
    </div>
    <YardView Topology="_topology" CellSize="40" ShowGrid="_showGrid" IsInverted="_invertView" LabelTranslator="_labelTranslator" />

    <footer>
        <label>
            <input type="checkbox" @bind="_showGrid" /> @Messages.ShowGrid
        </label>
        <label>
            <input type="checkbox" @bind="_invertView" /> @Messages.InvertView
        </label>
        <span class="hint">@Messages.EditDataFilesHint</span>
        <span class="spacer"></span>
        <button class="footer-button" @onclick="QueryPointStatesAsync" disabled="@_isBusy">@Messages.QueryPointStates</button>
        <button class="footer-button" @onclick="ResetAllPointsAsync" disabled="@_isBusy">@Messages.ResetAllPoints</button>
        <LanguageSelector />
    </footer>
</div>

<style>
    .yard-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background: #111;
        color: #ccc;
        overflow: hidden;
    }

    .emergency-bar {
        padding: 8px 20px;
        display: flex;
        justify-content: center;
    }

    .emergency-button {
        padding: 8px 24px;
        background: #cc0000;
        color: white;
        border: 2px solid #ff3333;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        letter-spacing: 0.5px;
    }

    .emergency-button:hover:not(:disabled) {
        background: #ee0000;
    }

    .emergency-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .yard-view {
        flex: 1;
        width: 100%;
        min-height: 0;
    }

    footer {
        padding: 10px 20px;
        display: flex;
        align-items: center;
        gap: 20px;
        font-size: 0.9rem;
    }

    footer label {
        display: flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    footer .hint {
        color: #666;
        font-style: italic;
    }

    footer .spacer {
        flex: 1;
    }

    footer .footer-button {
        padding: 4px 12px;
        background: #333;
        color: #ccc;
        border: 1px solid #555;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.85rem;
    }

    footer .footer-button:hover:not(:disabled) {
        background: #444;
    }

    footer .footer-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }
</style>

@code {
    [Parameter]
    public string? Station { get; set; }

    private YardTopology _topology = YardTopology.Empty;
    private LabelTranslator _labelTranslator = new();
    private bool _showGrid = true;
    private bool _invertView;
    private bool _isBusy;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Station))
        {
            if (!YardDataService.AvailableStations.Any(s => s.Equals(Station, StringComparison.OrdinalIgnoreCase)))
            {
                Navigation.NavigateTo("/", replace: true);
                return;
            }
            await YardDataService.SwitchStationAsync(Station);
        }
        _topology = YardDataService.Topology;
        _labelTranslator = YardDataService.LabelTranslator;
        YardDataService.DataChanged += OnDataChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await KeyboardCapture.InitializeAsync();
        }
    }

    private void OnDataChanged(DataChangedEventArgs args)
    {
        _topology = args.Topology;
        _labelTranslator = YardDataService.LabelTranslator;
        InvokeAsync(StateHasChanged);
    }

    private async Task QueryPointStatesAsync()
    {
        _isBusy = true;
        try
        {
            var addresses = YardDataService.Points
                .Where(p => !p.IsAddressOnly)
                .SelectMany(p => p.StraightAddresses.Concat(p.DivergingAddresses))
                .Select(Math.Abs)
                .Distinct()
                .Order();

            foreach (var address in addresses)
            {
                await YardController.SendPointStateRequestAsync(address, CancellationToken.None);
                await Task.Delay(100);
            }
        }
        finally
        {
            _isBusy = false;
        }
    }

    private async Task ResetAllPointsAsync()
    {
        _isBusy = true;
        try
        {
            var lockedAddresses = new HashSet<int>(
                PointLockings.PointLocks
                    .SelectMany(pl => pl.PointCommand.Addresses.Select(Math.Abs)));

            foreach (var point in YardDataService.Points.Where(p => !p.IsAddressOnly))
            {
                if (point.StraightAddresses.Any(a => lockedAddresses.Contains(Math.Abs(a)))) continue;
                var command = PointCommand.Create(point.Number, PointPosition.Straight, point.StraightAddresses);
                await YardController.SendPointSetCommandsAsync(command, CancellationToken.None);
            }
        }
        finally
        {
            _isBusy = false;
        }
    }

    private async Task SetAllSignalsRedAsync()
    {
        _isBusy = true;
        try
        {
            foreach (var signal in YardDataService.Signals)
            {
                if (int.TryParse(signal.Name, out var signalNumber) &&
                    SignalStateService.GetSignalState(signalNumber) == SignalState.Go)
                {
                    var command = new SignalCommand(signalNumber, signal.Address, SignalState.Stop) { FeedbackAddress = signal.FeedbackAddress };
                    await YardController.SendSignalCommandAsync(command, CancellationToken.None);
                }
            }
        }
        finally
        {
            _isBusy = false;
        }
    }

    public async ValueTask DisposeAsync()
    {
        YardDataService.DataChanged -= OnDataChanged;
        await KeyboardCapture.DisposeAsync();
    }
}
