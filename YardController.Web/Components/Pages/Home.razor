@page "/"
@rendermode InteractiveServer
@using YardController.Web.Services
@using Tellurian.Trains.YardController.Model
@inject IYardDataService YardDataService
@inject KeyboardCaptureService KeyboardCapture
@implements IAsyncDisposable

<PageTitle>@(_topology.Name)</PageTitle>

<div class="yard-container">
    <YardView Topology="_topology" CellSize="40" ShowGrid="_showGrid" />

    <footer>
        <label>
            <input type="checkbox" @bind="_showGrid" /> Show grid
        </label>
        <span class="hint">Edit data files to see live changes</span>
        <span class="spacer"></span>
        <LanguageSelector />
    </footer>
</div>

<style>
    .yard-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background: #111;
        color: #ccc;
    }

    .yard-view {
        flex: 1;
        width: 100%;
        min-height: 0;
    }

    footer {
        padding: 10px 20px;
        display: flex;
        align-items: center;
        gap: 20px;
        font-size: 0.9rem;
    }

    footer label {
        display: flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    footer .hint {
        color: #666;
        font-style: italic;
    }

    footer .spacer {
        flex: 1;
    }
</style>

@code {
    private YardTopology _topology = YardTopology.Empty;
    private bool _showGrid = true;

    protected override void OnInitialized()
    {
        _topology = YardDataService.Topology;
        YardDataService.DataChanged += OnDataChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await KeyboardCapture.InitializeAsync();
        }
    }

    private void OnDataChanged(DataChangedEventArgs args)
    {
        _topology = args.Topology;
        InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        YardDataService.DataChanged -= OnDataChanged;
        await KeyboardCapture.DisposeAsync();
    }
}
